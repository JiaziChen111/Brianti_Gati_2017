function test_stationarity(beta)
%the opnly argument is the result of the vector autoregression with the
%constant. Inside the function we directly remove the constant of beta
%Dimension of beta should be (nvar times nvar*nlags+1)

%Removing the constant
beta = beta(:,2:end);

%Extracting nvar and nlags from beta
nvar     = size(beta,1);
nlags    = size(beta,2)/nvar;

comp_matrix                               = zeros(nvar*nlags,nvar*nlags);
comp_matrix(1:nvar,1:nvar*nlags)          = B(2:end,:)';
comp_matrix(nvar+1:end,1:nvar*(nlags-1))  = eye(nvar*(nlags-1));

eigens = eig(comp_matrix);

zplane(eigens) %hahahahah this is cool!
distance = abs(eigens);
loc = distance > 1 ;
test = sum(loc);
if test >= 1
      error('The VAR is not stationary')
end





end